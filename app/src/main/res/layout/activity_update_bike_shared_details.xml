<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        tools:context=".UpdateBikeSharedDetails">

        <TextView
            android:id="@+id/tvUpShareBikes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/tv_welcomeUpShareBikes"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="22sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fNameWrapperUpShare"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/tvUpShareBikes"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:textColorHint="#000000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUpShareBikeFName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/et_round_corners"
                android:hint="@string/et_bikeFNameUpShare"
                android:inputType="textPersonName|textCapWords"
                android:paddingStart="10dp"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lNameWrapperUpShare"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/fNameWrapperUpShare"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColorHint="#000000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUpShareBikeLName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/et_round_corners"
                android:hint="@string/et_bikeLNameUpShare"
                android:inputType="textPersonName|textCapWords"
                android:paddingStart="10dp"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pNumberWrapperUpShare"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/lNameWrapperUpShare"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColorHint="#000000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUpShareBikePNumber"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/et_round_corners"
                android:hint="@string/et_bikePNoUpShare"
                android:inputType="phone"
                android:paddingStart="10dp"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailWrapperUpShare"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/pNumberWrapperUpShare"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColorHint="#000000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUpShareBikeEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/et_round_corners"
                android:hint="@string/et_bikeEmailUpShare"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/imgViewUpShareBikes"
            android:layout_width="280dp"
            android:layout_height="240dp"
            android:layout_below="@+id/emailWrapperUpShare"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#f2f2f2"
            android:src="@drawable/image_add_bikes"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvUpShareBikeOr"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_below="@+id/imgViewUpShareBikes"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:paddingEnd="10dp"
            android:text="@string/tv_orSelectUpShare"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="26sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat,RtlSymmetry" />

        <ImageButton
            android:id="@+id/btnUpShareTakePicture"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@+id/tvUpShareBikeOr"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/image_take_picture_camera"
            android:textSize="24sp"
            tools:ignore="ContentDescription" />

        <AutoCompleteTextView
            android:id="@+id/tvUpShareBikeCond"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/btnUpShareTakePicture"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/et_round_corners"
            android:hint="@string/atc_selectCondUpShare"
            android:paddingStart="10dp"
            android:textColorHint="#000000"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:id="@+id/imgArrowUpShareBikeCond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvUpShareBikeCond"
            android:layout_alignEnd="@+id/tvUpShareBikeCond"
            android:layout_alignBottom="@+id/tvUpShareBikeCond"
            android:contentDescription="@string/img_arrowCond"
            android:padding="5dp"
            android:src="@drawable/ic_arrow_drop_down_black_24dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bikeModelWrapperShare"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/tvUpShareBikeCond"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:textColorHint="#000000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUpShareBikeModel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/et_round_corners"
                android:hint="@string/et_bikeModelUpShare"
                android:inputType="textPersonName|textCapWords"
                android:paddingStart="10dp"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bikeManufactWrapperUpShare"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/bikeModelWrapperShare"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColorHint="#000000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUpShareBikeManufact"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/et_round_corners"
                android:hint="@string/et_bikeManufacturer"
                android:inputType="text|textCapWords"
                android:paddingStart="10dp"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bikePriceWrapperUpShare"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/bikeManufactWrapperUpShare"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColorHint="#000000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUpShareBikePriceDay"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/et_round_corners"
                android:hint="@string/et_bikeManufactUpShare"
                android:inputType="numberDecimal"
                android:paddingStart="10dp"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvUpShareBikeAvDate"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bikePriceWrapperUpShare"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="@string/tv_bikeShareUpAvDate"
            android:textColor="#000000"
            android:textSize="22sp"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/etUpShareBikeAvDate"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bikePriceWrapperUpShare"
            android:layout_alignEnd="@+id/bikePriceWrapperUpShare"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="#f2f2f2"
            android:hint="@string/et_bikeShareUpAvDate"
            android:inputType="date"
            android:paddingEnd="10dp"
            android:textAlignment="textEnd"
            android:textColor="#000000"
            android:textSize="22sp"
            tools:ignore="Autofill,RtlSymmetry" />

        <Button
            android:id="@+id/btnShareUpBike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUpShareBikeAvDate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/btn_blue"
            android:text="@string/btn_shareUpBike"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>